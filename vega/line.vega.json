{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "/fit3179/data/monthly.csv"
  },
  "config": { "concat": { "spacing": 60 }, "numberFormat": ".2s" },
  "transform": [
    {
      "calculate": "(+datum['Metropolitan train']) + (+datum['Metropolitan tram']) + (+datum['Metropolitan bus']) + (+datum['Regional train']) + (+datum['Regional coach']) + (+datum['Regional bus'])",
      "as": "TotalPassengers"
    },
    {
      "calculate": "datetime(datum.Year, datum.Month - 1)",
      "as": "YearMonthDate"
    }
  ],
  "hconcat": [
    {
      "transform": [
        { "filter": { "param": "time_brush" } },
        {
          "fold": [
            "Metropolitan train",
            "Metropolitan tram",
            "Metropolitan bus",
            "Regional train",
            "Regional coach",
            "Regional bus"
          ],
          "as": ["TransportType", "Passengers"]
        },
        {
          "aggregate": [
            {
              "op": "sum",
              "field": "Passengers",
              "as": "TotalPassengers"
            }
          ],
          "groupby": ["TransportType"]
        }
      ],
      "width": 300,
      "height": 200,
      "mark": "bar",
      "encoding": {
        "x": {
          "field": "TransportType",
          "type": "ordinal",
          "title": "Type of Transport",
          "sort": "-y",
          "axis": {
            "labelAngle": -45
          }
        },
        "y": {
          "field": "TotalPassengers",
          "type": "quantitative",
          "title": "Total Passengers"
        },
        "color": {
          "field": "TransportType",
          "type": "nominal",
          "legend": null,
          "scale": {
            "domain": [
              "Metropolitan train",
              "Metropolitan tram",
              "Metropolitan bus",
              "Regional train",
              "Regional coach",
              "Regional bus"
            ],
            "range": [
              "indigo",
              "indigo",
              "indigo",
              "maroon",
              "maroon",
              "maroon",
              "maroon"
            ]
          }
        },
        "tooltip": [
          {
            "field": "TransportType",
            "type": "ordinal",
            "title": "Type of Transport"
          },
          {
            "field": "TotalPassengers",
            "type": "quantitative",
            "title": "Total Passengers",
            "format": ","
          }
        ]
      },
      "title": "Total Passengers by Type of Transport"
    },
    {
      "width": 650,
      "height": 200,
      "layer": [
        {
          "params": [
            {
              "name": "time_brush",
              "select": { "type": "interval", "encodings": ["x"] }
            }
          ],
          "mark": "line",
          "encoding": {
            "x": {
              "field": "YearMonthDate",
              "type": "temporal",
              "title": "Date",
              "axis": {
                "tickCount": "year"
              }
            },
            "y": {
              "field": "TotalPassengers",
              "type": "quantitative",
              "title": "Total Passengers"
            },
            "opacity": { "value": 0.5 }
          },
          "title": "Total Passengers Over Time"
        },
        {
          "mark": "circle",
          "encoding": {
            "x": {
              "field": "YearMonthDate",
              "type": "temporal"
            },
            "y": {
              "field": "TotalPassengers",
              "type": "quantitative"
            },
            "size": { "value": 30 },
            "opacity": { "value": 1 },
            "tooltip": [
              {
                "field": "TotalPassengers",
                "type": "quantitative",
                "title": "Total Passengers",
                "format": ","
              },
              {
                "field": "YearMonthDate",
                "type": "temporal",
                "title": "Date",
                "format": "%B %Y"
              }
            ]
          }
        },
        {
          "transform": [
            {
              "filter": "datum.Year == 2020 && datum.Month == 3"
            }
          ],
          "mark": {
            "type": "text",
            "baseline": "bottom",
            "align": "left",
            "dx": 5,
            "dy": -5
          },
          "encoding": {
            "x": {
              "field": "YearMonthDate",
              "type": "temporal"
            },
            "y": {
              "field": "TotalPassengers",
              "type": "quantitative"
            },
            "text": { "value": "COVID-19 lockdowns begin" }
          }
        }
      ]
    }
  ]
}
