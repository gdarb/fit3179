{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 1200,
  "height": 550,
  "title": "Transportation across Victoria",
  "projection": {
    "type": "equirectangular",
    "scale": { "expr": "zoom_level" },
    "center": { "expr": "center_to" }
  },
  "params": [
    {
      "name": "zoom_level",
      "value": 4900,
      "bind": {
        "input": "range",
        "min": 4900,
        "max": 100000,
        "step": 100,
        "name": "Zoom: "
      }
    },
    {
      "name": "center_to",
      "value": [144.9, -36.7],
      "bind": {
        "input": "select",
        "options": [
          [145, -37.95],
          [144.3, -38.1],
          [144.9, -36.7],
          [147.1, -38.1]
        ],
        "labels": ["Melbourne CBD", "Geelong", "Bendigo", "Sale"],
        "name": "Map Centre: "
      }
    },
    {
      "name": "selectedYear",
      "value": 2022,
      "bind": {
        "input": "range",
        "min": 2018,
        "max": 2022,
        "step": 1,
        "name": "Year: "
      }
    }
  ],
  "layer": [
    {
      "data": {
        "url": "/fit3179/data/output.json",
        "format": { "type": "topojson", "feature": "ne_10m_graticules_1" }
      },
      "mark": { "type": "geoshape", "fill": null, "stroke": "lightgray" }
    },
    {
      "data": {
        "url": "/fit3179/data/output.json",
        "format": {
          "type": "topojson",
          "feature": "ne_10m_admin_1_states_provinces"
        }
      },
      "mark": { "type": "geoshape", "fill": "white", "stroke": "black" }
    },
    {
      "data": {
        "url": "/fit3179/data/output.json",
        "format": {
          "type": "topojson",
          "feature": "Traffic_Volume"
        }
      },
      "mark": {
        "type": "geoshape",
        "fill": "white",
        "stroke": "orangered",
        "opacity": 0.5
      }
    },
    {
      "data": {
        "url": "/fit3179/data/output.json",
        "format": {
          "type": "topojson",
          "feature": "ne_10m_railroads"
        }
      },
      "mark": {
        "type": "geoshape",
        "fill": "white",
        "stroke": "hotpink",
        "opacity": 0.5
      }
    },
    {
      "data": {
        "url": "/fit3179/data/metropolitan-stations.csv"
      },
      "transform": [
        {
          "calculate": "slice(datum.Fin_year, 2, 4) * 1 + 2000",
          "as": "StartYear"
        },
        {
          "filter": "datum.StartYear == selectedYear"
        }
      ],
      "mark": { "type": "circle", "tooltip": { "content": "data" } },
      "encoding": {
        "longitude": { "field": "Stop_long", "type": "quantitative" },
        "latitude": { "field": "Stop_lat", "type": "quantitative" },
        "color": {
          "field": "Pax_annual",
          "type": "quantitative",
          "title": "Annual passengers",
          "scale": {
            "type": "log",
            "scheme": "blues"
          }
        },
        "tooltip": [
          { "field": "Stop_name", "type": "nominal", "title": "Station" },
          {
            "field": "Pax_annual",
            "type": "quantitative",
            "title": "Annual passengers",
            "format": ","
          }
        ]
      }
    },
    {
      "data": {
        "url": "/fit3179/data/regional-stations.csv"
      },
      "transform": [
        {
          "calculate": "slice(datum.Fin_year, 2, 4) * 1 + 2000",
          "as": "StartYear"
        },
        {
          "filter": "datum.StartYear == selectedYear"
        }
      ],
      "mark": { "type": "circle", "tooltip": { "content": "data" } },
      "encoding": {
        "longitude": { "field": "Stop_long", "type": "quantitative" },
        "latitude": { "field": "Stop_lat", "type": "quantitative" },
        "color": {
          "field": "Pax_annual",
          "type": "quantitative",
          "title": "Annual passengers",
          "scale": {
            "type": "log",
            "scheme": "blues"
          }
        },
        "tooltip": [
          { "field": "Stop_name", "type": "nominal", "title": "Station" },
          {
            "field": "Pax_annual",
            "type": "quantitative",
            "title": "Annual passengers",
            "format": ","
          }
        ]
      }
    }
  ]
}
