{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 1200,
  "height": 550,
  "title": "Transportation across Victoria",
  "projection": { "type": "equirectangular" },
  "layer": [
    {
      "data": {
        "url": "/data/output.json",
        "format": { "type": "topojson", "feature": "ne_10m_graticules_1" }
      },
      "mark": { "type": "geoshape", "fill": null, "stroke": "lightgray" }
    },
    {
      "data": {
        "url": "/data/output.json",
        "format": {
          "type": "topojson",
          "feature": "ne_10m_admin_1_states_provinces"
        }
      },
      "mark": { "type": "geoshape", "fill": "white", "stroke": "black" }
    },
    {
      "data": {
        "url": "/data/output.json",
        "format": {
          "type": "topojson",
          "feature": "Traffic_Volume"
        }
      },
      "mark": {
        "type": "geoshape",
        "fill": "white",
        "stroke": "orangered",
        "opacity": 0.5
      }
    },
    {
      "data": {
        "url": "/data/output.json",
        "format": {
          "type": "topojson",
          "feature": "ne_10m_railroads"
        }
      },
      "mark": {
        "type": "geoshape",
        "fill": "white",
        "stroke": "hotpink",
        "opacity": 0.5
      }
    },
    {
      "data": {
        "url": "/data/metropolitan-stations-21-22.csv"
      },
      "mark": { "type": "circle", "tooltip": { "content": "data" } },
      "encoding": {
        "longitude": { "field": "Stop_long", "type": "quantitative" },
        "latitude": { "field": "Stop_lat", "type": "quantitative" },
        "color": {
          "field": "Pax_annual",
          "type": "quantitative",
          "title": "Annual passengers",
          "scale": {
            "type": "log",
            "scheme": "viridis"
          }
        },
        "tooltip": [
          { "field": "Stop_name", "type": "nominal", "title": "Station" },
          {
            "field": "Pax_annual",
            "type": "quantitative",
            "title": "Annual passengers",
            "format": ","
          }
        ]
      }
    },
    {
      "data": {
        "url": "/data/regional-stations-21-22.csv"
      },
      "mark": { "type": "circle", "tooltip": { "content": "data" } },
      "encoding": {
        "longitude": { "field": "Stop_long", "type": "quantitative" },
        "latitude": { "field": "Stop_lat", "type": "quantitative" },
        "color": {
          "field": "Pax_annual",
          "type": "quantitative",
          "title": "Annual passengers",
          "scale": {
            "type": "log",
            "scheme": "viridis"
          }
        },
        "tooltip": [
          { "field": "Stop_name", "type": "nominal", "title": "Station" },
          {
            "field": "Pax_annual",
            "type": "quantitative",
            "title": "Annual passengers",
            "format": ","
          }
        ]
      }
    }
  ]
}
